{% extends 'ImhBaseBundle::layout.html.twig' %}

{% block title %}{{ 'imh.base.contact.page_title'|trans }}{% endblock%}

{% block stylesheets %}
    {{ parent() }}

    {% stylesheets output='assets/compiled/css/contact.css' filter='compass'
    '@ImhBaseBundle/Resources/assets/sass/contact.scss'
    %}
    <link rel="stylesheet" href="{{ asset_url }}" type="text/css"/>
    {% endstylesheets %}
{% endblock %}

{% block flashes %}
    {% for flash in app.session.flashbag.get('success') %}
        <div class="flashbag-message">
            <div class="flashbag-message-content">
                <div class="top">
                    <p>Information</p>
                    <a class="close" data-dismiss="alert" href="#">Ã—</a>
                </div>
                <p class="msg">{{ flash|trans }}</p>
            </div>
        </div>
    {% endfor %}
{% endblock %}

{% block main %}
    <div class="main-content-wrapper">
        <section class="middle shadows">
            <nav class="lang">
                {% include 'ImhBaseBundle:Menu:lang.html.twig' %}
            </nav>

            <p>{{ 'imh.base.contact.answer'|trans }}</p>

            {{ form_start(form, {'attr': {'id': 'form-contact'}}) }}
                {{ form_errors(form) }}

                <div class="clearfix">
                    <div class="contact-info">
                        {{ form_row(form.lastName) }}
                        {{ form_row(form.firstName) }}
                        {{ form_row(form.email) }}
                        {{ form_row(form.subject) }}
                    </div>
                    <div class="contact-message ">
                        {{ form_label(form.message) }}{{ form_errors(form.message) }}{{ form_widget(form.message) }}
                    </div>
                </div>
                <p>* {{ 'imh.base.contact.mandatory'|trans }}</p>
                <div class="send">
                    {{ form_row(form.send) }}
                </div>
            {{ form_end(form) }}
        </section>
    </div>
{% endblock %}

{% block sidebar %}{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% javascripts
    '@ImhBaseBundle/Resources/assets/js/jquery.imh.scrollmove.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

    <script type="text/javascript">
        $(function () {
            'use strict';

            /* Lazy Load */
            $('img.lazy').show().lazyload({
                effect : 'fadeIn',
                placeholder: '../../../bundles/imhbase/images/empty.gif'
            });

            $('#content').contentHeightAdjust();

            /* Flashbag Popin */
            var flashbag = 'flashbag-message',
                $close   = $('.close');

            $('.' + flashbag).fadeIn(600);
            $close.on('click', function(e) {
                $(this).parents('.' + flashbag).fadeOut(400);
                e.preventDefault();
            });
        });
    </script>
{% endblock %}
