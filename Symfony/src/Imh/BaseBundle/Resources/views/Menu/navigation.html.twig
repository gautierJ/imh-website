<nav class="imh__navigation" data-layer>
    <div class="container imh__container">
        {% spaceless %}
            <nav class="imh__navigation-main" data-main>
                {{ knp_menu_render('main', {'currentAsLink':false, 'allow_safe_labels': true} ) }}
            </nav>
            <nav class="imh__navigation-lang" data-lang>
                {% include 'ImhBaseBundle:Menu:lang.html.twig' %}
            </nav>
        {% endspaceless %}
    </div>
</nav>
<div class="hamburger-wrapper">
    <button class="globe" type="button" aria-label="Languages" aria-controls="navigation" data-globe>
        <i class="fa fa-3x fa-inverse fa-globe" aria-hidden="true"></i>
    </button>
    <button class="hamburger hamburger--collapse" type="button" aria-label="Menu" aria-controls="navigation" data-hamburger>
        <span class="hamburger-label text-uppercase">{{ 'imh.base.menu.label'|trans }}</span>
        <span class="hamburger-box">
            <span class="hamburger-inner"></span>
        </span>
    </button>
</div>